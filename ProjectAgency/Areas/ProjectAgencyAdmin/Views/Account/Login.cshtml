@using ProjectAgency.Areas.ProjectAgencyAdmin.ViewModels.Account;
@using ProjectAgency.Utilities.Enums;
﻿
@model LoginVM

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <h6 class="font-weight-light">Sign In</h6>
                        <form class="pt-3" method="post">
                            <div class="form-group">
                                <label asp-for="UserNameOrEmail">Username or Email</label>
                                <input asp-for="UserNameOrEmail" class="form-control form-control-lg" placeholder="Username or Email">
                                <span asp-validation-for="UserNameOrEmail"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="col-lg-12">
                                <label asp-for="isRemembered">Remember Me</label>
                                <input asp-for="isRemembered"/>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Sign In</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>